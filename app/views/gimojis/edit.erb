<h2>Update your Gimoji</h2>
<% if flash.has?(:message) %>
<%= flash[:message] %><br></br>
<% end %>
<form action="/gimojis/<%=@gimoji.slug%>" method="POST">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<label>Gimoji</label>
	<br></br>
	<label for="name">Name</label>
	<input type="text" id="name" name="gimoji[name]"  value="<%= @gimoji.name%>">
	<br></br>
	<label for="tag">Tag</label>
	<input type="text" id="tag" name="gimoji[tag]"  value="<%= @gimoji.tag %>">
	<br></br>
	<label>Select Emotion</label>
	<% Emotion.all.each do |emotion| %>
    <input id="emotion_<%= emotion.id %>" type="checkbox" name="gimoji[emotion_ids][]" value="<%= emotion.id %>" >
    <%=emotion.name%></input><% end %>
	<label for="new-emotion">(and/or) Create Emotion</label>
	<input type="text" id="new_emotion" name="gimoji[new_emotion]">
	<br></br>
    <input type="submit" value="submit" name="submit">
  </form>
